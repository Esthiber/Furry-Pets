@using PawfectMatch.Components.Layout.QuickMenu
@inherits LayoutComponentBase

@* 1. Estructura principal con Flexbox: 'main-content' y 'quick-menu-sidebar' *@
<div class="page-container">

    <main class="main-content">
        @* El contenido de cada página se renderizará aquí *@
        @Body
    </main>

    @* 2. Contenedor para el menú rápido. Lo he cambiado a <aside> por semántica. *@
    <aside class="quick-menu-sidebar">
        <QuickMenu />
    </aside>

</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

